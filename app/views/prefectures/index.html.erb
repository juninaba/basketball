<%= render partial: 'users/navbar' %>
<header>
  <h5 class="card-title text-center search-title">
    検索結果
  </h5>
</header>
<% @users.each do |user| %>
  <div class="card mx-auto" style="width: 20rem;">
    <% if user.avatar .attached? %>
      <%= image_tag user.avatar, class: 'maru' %>
    <% else %>
      <%= image_tag 'noimage.png', class: 'maru' %>
    <% end %>
    <div class="card-body text-center">
      <h5 class="card-title"><%= user.nickname %></h5>
      <% if user.gender == "男" %>
        <p class="card-text">チーム名・学校名: <%= user.team %><i class="fas fa-male male"></i><p>
      <% else %>
        <p class="card-text">チーム名・学校名: <%= user.team %><i class="fas fa-female female"></i><p>
      <% end %>
      <p class="card-text">都道府県: <%= user.prefecture.name %><p>
    </div>
    <div class="card-footer text-center">
      <% if user_signed_in? %>
        <%= link_to '詳細', user_path(user), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>

