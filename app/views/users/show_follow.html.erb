<%= render partial: 'navbar' %>
<% @user.followings.each do |user| %>
  <div class="card mx-auto" style="width: 18rem;">
  <% if user.avatar .attached? %>
    <%= image_tag user.avatar, :size => '200x200', class: 'maru' %>
  <% else %>
    <img src="http://schoolshop-lab.jp/wp-content/uploads/2018/11/240ec862387d03003cb4c41cd93cb0be.png" alt="画像はありません" width="200" height="200" class="maru">
  <% end %>
  <div class="card-body text-center">
    <h5 class="card-title"><%= user.nickname %></h5>
    <p class="card-text">チーム名・学校名: <%= user.team %><p>
    <p class="card-text">都道府県: <%= user.prefecture.name if user.prefecture_id? %><p>
    <%= link_to '詳細', user_path(user), class: "btn btn-primary" %>
  </div>
</div>
<% end %>
